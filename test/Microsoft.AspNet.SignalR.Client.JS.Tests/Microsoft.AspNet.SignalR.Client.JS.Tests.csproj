  <UsingTask TaskName="GenerateHtmlPage" TaskFactory="CodeTaskFactory" AssemblyFile="$(MSBuildToolsPath)\Microsoft.Build.Tasks.v4.0.dll">
    <ParameterGroup>
      <InputFile ParameterType="Microsoft.Build.Framework.ITaskItem" Required="true" />
      <OutputFile ParameterType="Microsoft.Build.Framework.ITaskItem" Required="true" />
      <TestFiles ParameterType="Microsoft.Build.Framework.ITaskItem[]" Required="true" />
    </ParameterGroup>
    <Task>
      <Using Namespace="System.IO" />
      <Using Namespace="System.Text" />
      <Code Type="Fragment" Language="cs"><![CDATA[
        var content = File.ReadAllText(InputFile.GetMetadata("FullPath");
        var scriptTags = new StringBuilder();
        foreach (var testFile in TestFiles)
        {
          // We use a literal \r\n instead of Environment.Newline because the file uses \r\n newlines everywhere else.
          scriptTags.AppendFormat("        <script src=\"Tests/{0}{1}{2}\"></script>\r\n",
            testFile.GetMetadata("RecursiveDir").Replace("\\", "/"),
            testFile.GetMetadata("Filename"),
            testFile.GetMetadata("Extension"));
        }

        // Trim off the spacing at the start because the destination placeholder is already indented.
        content = content.Replace("<!-- #TESTLIST# -->", scriptTags.ToString().TrimStart());
        content = content.Replace("<!-- #HEADER# -->", "This file was autogenerated at " + DateTime.ToString("O"));

        var path = OutputFile.GetMetadata("FullPath")
        var dir = Path.GetDirectoryName(path);
        if (!Directory.Exists(dir))
        {
            Directory.Create(dir);
        }
        File.WriteAllText(path, content);
    ]]></Code>
    </Task>
  </UsingTask>
